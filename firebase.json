{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
  },
  "functions": {
    "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint"],
    "source": "functions"
  },
  "emulators": {
    "functions": {
      "host": "localhost",
      "port": "8989"
    },
    "firestore": {
      "port": 8988
    },
    "database": {
      "port": 8987
    },
    "hosting": {
      "port": 8980
    },
    "ui": {
      "enabled": true
    }
  },
  "database": {
    "rules": "database.rules.json"
  }
}
